<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ForexApp.ViewModel"
             x:Class="ForexApp.Views.MainPage"
             Title="MainPage">

    <ContentPage.BindingContext>
        <viewmodels:MainViewModel/>
    </ContentPage.BindingContext>
    
    <VerticalStackLayout Padding="20" Spacing="15">
        
        <Entry Placeholder="Base Currency (e.g. USD)" Text="{Binding BaseCurrency}" />

        <Button Text="Get Rates" Command="{Binding LoadRatesCommand}" />

        <Label Text="{Binding Result}" FontAttributes="Bold" />

        <CollectionView ItemsSource="{Binding CurrencyList}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding}" FontSize="14"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>